<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llprovisioned"
    android:layout_width="match_parent"
    android:layout_height="@dimen/node_list_height"
    android:orientation="horizontal"
    android:background="@drawable/selector_recycleview_item"
    >

    <TextView
        android:id="@+id/nodeNum"
        android:layout_width="@dimen/node_num_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/node_num_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textSize="@dimen/node_list_text_textsize"
            android:text="@string/provisioned_mesh_device"/>
        <LinearLayout
            android:id="@+id/status_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/node_list_status_textsize"
                />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/node_list_status_textsize"
                />
            <TextView
                android:id="@+id/pro_conf_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/node_list_status_textsize"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heartbeatReceive_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/heartbeatReceive_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/node_list_heartbeat_textsize"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendShip_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/fs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "FS: "
                android:textSize="@dimen/node_list_heartbeat_textsize"
                />
            <TextView
                android:id="@+id/fs_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Off"
                android:textSize="@dimen/node_list_heartbeat_textsize"
                />
            <TextView
                android:id="@+id/fs_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/node_list_heartbeat_textsize"
                />
            <TextView
                android:id="@+id/off_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = " , Off Num: "
                android:textSize="@dimen/node_list_status_textsize"
                />
            <TextView
                android:id="@+id/off_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "0"
                android:textSize="@dimen/node_list_status_textsize"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>